<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textSessionTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/session_time"/>

    <TextView
        android:id="@+id/noClimbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Climb History"
        android:layout_below="@id/textSessionTime"
        android:layout_marginTop="16dp"/>

    <ListView
        android:id="@+id/listSessionClimbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textSessionTime"
        android:layout_marginTop="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addClimb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>